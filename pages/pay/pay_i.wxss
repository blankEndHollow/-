/* pages/pay/pay_i.wxss */
page{
  background-color: rgb(238, 237, 237);
  padding-bottom: 130rpx;
}
.address{
  width: 700rpx;
  height: 250rpx;
  background:#fff;
  margin: 8px auto;
  border-radius: 16rpx;
  display: flex;
}
.address .icon{
  height: 100%;
  width: 150rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-left: 20rpx;
}
.address .icon image{
  width: 80rpx;
}
.address .text{
  height: 100%;
  padding-left: 30rpx;
}
.address .header{
  margin-top: 30rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
}
.header .name{
  font-size: 34rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  max-width: 210rpx;
}
.header .tell{
  padding-left: 30rpx;
  font-size: 30rpx;
  color: rgb(153, 153, 153);
}
.address .info{
  padding: 20rpx 0 0;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  width: 450rpx;
}
.tapadd{
  flex: 1;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-size: 30rpx;
  background-position: center;
}

.goods{
  width: 700rpx;
  margin: 0 auto;
}
.goods .good_item{
  display: flex;
  margin-bottom:15rpx ;
  border-radius: 20rpx;
  background-color: #fff;
  padding-right: 15rpx;
  padding-left: 8rpx;
}
.goods .good_item .param{
  flex: 3;
  padding: 30rpx 15rpx 0;
}
.goods .good_item .tran{
  flex: 1;
  padding-top: 30rpx;
  font-size: 30rpx;
  text-align: right;
}
.goods .good_item image{
  flex: 2;
  border-radius: 8rpx;
}

.getadd{
  padding-top: 40rpx;
}

.tabBar{
  position: fixed;
  height: 130rpx;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 0 9rpx rgb(167, 167, 167);
  display: flex;
}
.tabBar .space{
  flex: 1;
}
.tabBar .price_total{
  flex: 3;
}
.tabBar .btn{
  flex: 2;
}
.price_total{
  display: flex;
  align-items: center;
}

.price_total .total_text{
  font-size: 26rpx;
  color: rgb(185, 181, 181);
}
.price_total .mindl{
  font-size: 34rpx;
  padding-left: 30rpx;
}
.price_total .mindl .count{
  color: var(--themeColor);
}
.tabBar .btn{
  display: flex;
  align-items: center;
  justify-content: center;
}
.tabBar .btn .submit{
  background: linear-gradient(to right, rgb(255, 128, 0), rgb(255, 80, 0)) center center / cover no-repeat;
  height: 80rpx;
  width:  200rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  border-radius: 50rpx;
}