/* pages/goods_detail/detail_i.wxss */
page{
  padding-bottom: 90rpx;
}
.detail_swiper swiper{
  height: 70vw;
  text-align: center;
}

.detail_swiper swiper image{
  width: 60%;
}
.goods_price{
  font-size: 32rpx;
  padding: 15rpx;
  font-weight: 600;
  color: var(--themeColor);
}
.goods_name_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;

}
.goods_name_row .goods_name{
  flex: 5;
  color:#000;
  font-size: 30rpx;
  padding: 0 10rpx;

  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_name_row .goods_collect{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  
  align-items: center;
  border-left: 1px solid #888;

}
